    "version": "0.2.0",
    "configurations": [{
        "name": "Python: Odoo16",
        "type": "python",
        "request": "launch",
        "stopOnEntry": false,
        "python": "C:\\Odoo\\odoo16\\python\\python.exe", //path of python in your local machine where odoo has installed
        "console": "integratedTerminal",
        "program": "${workspaceRoot}\\odoo-bin",
        "args": [
            "--config=${workspaceRoot}\\odoo.conf",
        ],
        "cwd": "${workspaceRoot}",
        "env": {},
        "envFile": "${workspaceRoot}/.env",
        "debugOptions": [
            "RedirectOutput"
        ]
    }]
}